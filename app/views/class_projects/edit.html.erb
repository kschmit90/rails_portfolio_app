<h1>Edit Class Project</h1>

<% @class_project.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<%= form_for(@class_project, :url => update_project_path) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :description %>
	<%= f.text_field :description %>
	
	<%= f.label :summary %>
	<%= f.text_field :summary %>
	
	<%= f.label :github %>
	<%= f.text_field :github %>
	
	<%= f.label :other_url %>
	<%= f.text_field :other_url %>
	
	<%= f.submit %>
	
<% end %>